# Root
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2

[*.coffee]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
